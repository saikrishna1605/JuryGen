# Environment
ENVIRONMENT=development
DEBUG=true

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Database Configuration
FIRESTORE_DATABASE_ID=(default)

# Cloud Storage
STORAGE_BUCKET_UPLOADS=your-project-uploads
STORAGE_BUCKET_OUTPUTS=your-project-outputs

# AI Services Configuration
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL_FLASH=gemini-1.5-flash
GEMINI_MODEL_PRO=gemini-1.5-pro
VECTOR_SEARCH_INDEX_ID=your-vector-search-index
VECTOR_SEARCH_ENDPOINT_ID=your-vector-search-endpoint

# Document AI
DOCUMENT_AI_PROCESSOR_ID=your-document-ai-processor-id
DOCUMENT_AI_LOCATION=us

# Translation and TTS
TRANSLATION_PROJECT_ID=your-project-id
TTS_VOICE_NAME=en-US-Neural2-F

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Feature Flags
ENABLE_VOICE_FEATURES=true
ENABLE_TRANSLATION=true
ENABLE_PII_DETECTION=true