# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security Configuration
SECRET_KEY=your-secret-key-32-characters-minimum-length-required
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-google-cloud-project
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Google AI/Vertex AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Cloud Services
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket
DOCUMENT_AI_PROCESSOR_ID=your-document-ai-processor-id
TRANSLATION_API_ENABLED=true
SPEECH_API_ENABLED=true

# Database Configuration
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_EMULATOR_HOST=localhost:8080

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com

# Feature Flags
ENABLE_VOICE_FEATURES=true
ENABLE_TRANSLATION=true
ENABLE_ANALYTICS=true
ENABLE_DOCUMENT_AI=true
ENABLE_SPEECH_TO_TEXT=true
ENABLE_TEXT_TO_SPEECH=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,doc
UPLOAD_TIMEOUT_SECONDS=300

# Processing Configuration
MAX_PROCESSING_TIME_MINUTES=30
MAX_CONCURRENT_JOBS=5
JOB_CLEANUP_INTERVAL_HOURS=24

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30

# Development/Testing Configuration
MOCK_EXTERNAL_SERVICES=false
SKIP_AUTH_IN_TESTS=false
TEST_DATABASE_URL=sqlite:///./test.db

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT_SECONDS=30

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Versioning
API_VERSION=v1
API_TITLE=Legal Companion API
API_DESCRIPTION=AI-powered legal document analysis API

# Performance Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
HTTP_TIMEOUT_SECONDS=30